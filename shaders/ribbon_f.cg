uniform UBO
{
   float time;
} constants;

void main(float3 vEC,
float4 out FragColor : COLOR)
{
   const float3 up = float3(0.0, 0.0, 1.0);
   float3 x = dFdx(vEC);
   float3 y = dFdy(vEC);
   float3 normal = normalize(cross(x, y));
   float c = 1.0 - dot(normal, up);
   c = (1.0 - cos(c * c)) / 3.0;
   FragColor = float4(1.0, 1.0, 1.0, c);
}
